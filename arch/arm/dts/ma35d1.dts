/dts-v1/;
#include "ma35d1.dtsi"

/ {
	model = "Nuvoton MA35D1 EVB board";
	compatible = "nuvoton,ma35d1";

	aliases {
		spi0 = &qspi0;
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x80000000 0 0x0e000000>;
	};

};

&uart0 {
	status = "okay";
};

&qspi0 {
        status = "okay";

	#address-cells = <1>;
	#size-cells = <0>;
	spi-nand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		spi-max-frequency = <30000000>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <4>;
		reg = <0>;

		partition@0 {
			label = "uboot";
			reg = <0 0x200000>;
		};
		partition@1 {
			label = "uboot-env";
			reg = <0x200000 0xC00000>;
		};
		partition@2 {
			label = "linux-device-tree";
			reg = <0x280000 0x400000>;
		};
		partition@3 {
			label = "linux";
			reg = <0x300000 0xB00000>;
		};

		partition@4 {
			label = "rootfs";
			reg = <0xE00000 0x6E00000>;
		};
	};
};

&display {
	status = "okay";
	//RGB interface
	pixel-fmt = <6>;//RGB888

	display-timings {
		native-mode = <&timing0>;

		timing0: 1024x600 {
			clock-frequency = <51000000>;//pixel clock(pixclock)
			hactive = <1024>;
			vactive = <600>;
			hsync-len = <1>;
			hfront-porch = <160>;
			hback-porch = <160>;
			vsync-len = <1>;
			vfront-porch  = <23>;
			vback-porch = <12>;
		};

		timing1: 800x480 {
			clock-frequency = <45000000>;
			hactive = <800>;
			vactive = <480>;
			hsync-len = <1>;
			hfront-porch = <210>;
			hback-porch = <46>;
			vsync-len = <1>;
			vfront-porch  = <22>;
			vback-porch = <23>;
		};

		timing2: 1920x1080 {
			clock-frequency = <125000000>;
			hactive = <1920>;
			vactive = <1080>;
			hsync-len = <32>;
			hfront-porch = <120>;
			hback-porch = <128>;
			vsync-len = <14>;
			vfront-porch  = <21>;
			vback-porch = <10>;
		};
	};
};

